<div class="jumbotron">

</div>

<div class="container">

  <h1>Tweet一覧</h1>

  <p><%= notice %></p>

  <table>
    <tr>
      <th>内容</th>
    </tr>

  <% @clones.each do |clone| %>
    <tr>
      <td><%= clone.content %></td>
      <td><%= link_to "Tweetを編集する", edit_clone_path(clone.id) %></td>
      <td><%= link_to "Tweetを削除する", clone_path(clone.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>

    </tr>
  <% end %>
  </table>

  <%= link_to '新しくTweetを投稿する', new_clone_path %>

</div>
